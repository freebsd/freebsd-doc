  <articleinfo>
    <title>Euro symbolet p&aring;
      <systemitem class="osname">FreeBSD</systemitem></title>

    <authorgroup>
      <author>
	<firstname>Aaron</firstname>

	<surname>Kaplan</surname>

	<affiliation>
