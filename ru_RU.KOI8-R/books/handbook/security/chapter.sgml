  <sect1 id="firewalls">
    <sect1info>
      <authorgroup>
	<author>
	  <firstname>Gary</firstname>
	  <surname>Palmer</surname>
	  <contrib>Предоставили </contrib>
	</author>
	<author>
	  <firstname>Alex</firstname>
