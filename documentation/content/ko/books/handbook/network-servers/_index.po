"path = /usr/src\n"
"valid users = developer\n"
"writable  = yes\n"
"browsable = yes\n"
"read only = no\n"
"guest ok = no\n"
"public = no\n"
"create mask = 0666\n"
"directory mask = 0755\n"
msgstr ""

