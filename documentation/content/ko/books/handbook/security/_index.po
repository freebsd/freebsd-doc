#: documentation/content/en/books/handbook/security/_index.adoc:1054
#, no-wrap
msgid ""
"kdc_program=\"/usr/local/sbin/kdc\"\n"
"kadmind_program=\"/usr/local/sbin/kadmind\"\n"
"kdc_flags=\"\"\n"
"kdc_enable=\"YES\"\n"
"kadmind_enable=\"YES\"\n"
msgstr ""
