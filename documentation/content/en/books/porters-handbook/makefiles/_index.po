#. type: delimited block . 4
#: documentation/content/en/books/porters-handbook/makefiles/_index.adoc:1208
#, no-wrap
msgid ""
"PORTNAME=       libworkman\n"
"PORTVERSION=    1.4\n"
"CATEGORIES=     audio\n"
"MASTER_SITES=   LOCAL/jim\n"
"DISTNAME=       ${PORTNAME}-1999-06-20\n"
msgstr ""

#. type: Block title
#: documentation/content/en/books/porters-handbook/makefiles/_index.adoc:1213
#, no-wrap
msgid "Exotic Case 2"
