"  -cdrom ../ISO/fbsd.iso \\\n"
"  -boot order=cd,menu=on \\\n"
"  -drive if=none,id=drive0,cache=writeback,aio=threads,format=qcow2,discard=unmap,file=../VM/right.qcow2 \\\n"
