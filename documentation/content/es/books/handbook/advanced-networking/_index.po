"  eap=TLS <.>\n"
"  identity=\"loader\" <.>\n"
"  ca_cert=\"/etc/certs/cacert.pem\" <.>\n"
"  client_cert=\"/etc/certs/clientcert.pem\" <.>\n"
"  private_key=\"/etc/certs/clientkey.pem\" <.>\n"
"  private_key_passwd=\"freebsdmallclient\" <.>\n"
"}\n"
