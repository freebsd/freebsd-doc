"  proto=RSN\n"
"  key_mgmt=WPA-EAP\n"
"  eap=TTLS <.>\n"
"  identity=\"test\" <.>\n"
"  password=\"test\" <.>\n"
"  ca_cert=\"/etc/certs/cacert.pem\" <.>\n"
"  phase2=\"auth=MD5\" <.>\n"
