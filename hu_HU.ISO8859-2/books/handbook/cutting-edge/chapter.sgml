      <authorgroup>
	<author>
	  <firstname>Colin</firstname>
	  <surname>Percival</surname>
	  <contrib>A meg&iacute;r&aacute;shoz felhaszn&aacute;lt
	    jegyzeteket k&eacute;sz&iacute;tette: </contrib>
	</author>
      </authorgroup>
