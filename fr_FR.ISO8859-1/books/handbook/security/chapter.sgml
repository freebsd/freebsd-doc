  <sect1 id="crypt">
    <sect1info>
      <authorgroup>
	<author>
	  <firstname>Bill</firstname>
	  <surname>Swingle</surname>
	  <contrib>En partie r&eacute;&eacute;crit et mis &agrave; jour
	    par </contrib>
	</author>
