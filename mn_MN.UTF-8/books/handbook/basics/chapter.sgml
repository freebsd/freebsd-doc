	    <entry><literal>rw-</literal></entry>
	  </row>

	  <row>
	    <entry>7</entry>
	    <entry>Уншигдана, бичигдэнэ, гүйцэтгэгдэнэ</entry>
	    <entry><literal>rwx</literal></entry>
