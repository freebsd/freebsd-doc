    <sect2 id="docsnap">
      <sect2info>
	<authorgroup>
	  <author>
	    <firstname>Пав</firstname>
	    <surname>Лукистник</surname>
	    <contrib>Мэдээллээр хангасан </contrib>
	  </author>
