      <authorgroup>
	<author>
	  <firstname>Марк</firstname>
	  <surname>Силвэр</surname>
	  <contrib>Хамтран бичилцсэн </contrib>
	</author>
      </authorgroup>
      <authorgroup>
        <author>
	  <firstname>Шагдарын</firstname>
	  <surname>Нацагдорж</surname>
	  <contrib>Орчуулсан  </contrib>
        </author>
