+int
+tcl_new_connection(struct tcl_addr* tcl)
+{
+	if(tcl) {
+		int res = 1;
+		lock_quick_lock(&tcl->lock);
+		if(tcl->count >= tcl->limit)
+			res = 0;
+		else
+			tcl->count++;
+		lock_quick_unlock(&tcl->lock);
+		return res;
+	}
+	return 1;
+}
+
+void
+tcl_close_connection(struct tcl_addr* tcl)
+{
+	if(tcl) {
+		lock_quick_lock(&tcl->lock);
+		log_assert(tcl->count > 0);
+		tcl->count--;
+		lock_quick_unlock(&tcl->lock);
+	}
+}
