+/** delete auth data domain node */
+static void
+auth_data_delete(struct auth_data* n)
+{
+	struct auth_rrset* p, *np;
+	if(!n) return;
+	p = n->rrsets;
+	while(p) {
+		np = p->next;
+		auth_rrset_delete(p);
+		p = np;
+	}
+	free(n->name);
+	free(n);
