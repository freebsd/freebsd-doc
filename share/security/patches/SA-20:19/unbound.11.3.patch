+/** read all auth zones from file (if they have) */
+static int
+auth_zones_read_zones(struct auth_zones* az, struct config_file* cfg)
+{
+	struct auth_zone* z;
+	lock_rw_wrlock(&az->lock);
+	RBTREE_FOR(z, struct auth_zone*, &az->ztree) {
