++				}
++			}
++		}
++		get_result_msg(&dnsmsg, qinfo, id, flags, true,
++			       rpz, commreply->c, worker->scratchpad);
++		new_st = rpz->st;
++	}
++
++	switch(new_st) {
++	case st_off:
++	case st_servfail:
++		break;
++	case st_unknown:
++		pop_discard_st(rpz);
++		break;
++	case st_iterate:
++	case st_ck_ns:
++		if(pop_st(rpz))
++			rpz->st = new_st;
++		break;
++	case st_rewritten:
++		pop_discard_st(rpz);
++		break;
++	default:
