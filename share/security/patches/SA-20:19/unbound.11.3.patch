++			continue;
++
++		nsdata = (const struct packed_rrset_data*)nskey->entry.data;
++		for(rr_n = 0;
++		    rr_n < nsdata->count && rpz->st == st_unknown;
++		    ++rr_n) {
++			nsname = nsdata->rr_data[rr_n]+2;
++			nsname_size = nsdata->rr_len[rr_n];
++			if(nsname_size <= 2)
++				continue;
++			nsname_size -= 2;
++			if(!ck_dname(nsname, nsname_size, LIBRPZ_TRIG_NSDNAME,
++				     qname, recursed, rpz))
