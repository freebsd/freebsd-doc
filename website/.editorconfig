# editorconfig.org

root = true

[*]
# UNIX style files
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{htm,html}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.adoc]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
