	  </row>

	  <row>
            <entry><application>Gnumeric</application></entry>
	    <entry><literal>gnumeric</literal></entry>
	    <entry><filename role="package">math/gnumeric</filename></entry>
	  </row>

	  <row>
            <entry><application>Abacus</application></entry>
